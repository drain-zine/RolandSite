{
  "name": "PORTFOLIO",
  "version": "1.0.0",
  "description": "Tom Stanett Portfolio",
  "scripts": {
    "clean": "rimraf _site",
    "start": "cross-env NODE_ENV=development npm-run-all -l clean --parallel start:*",
    "start:sass": "sass --watch styles/index.sass:_site/styles/index.css",
    "start:eleventy": "eleventy --serve",
    "start:tailwind": "postcss -w styles/_tailwind.css -o _site/styles/tailwind.css",
    "build": "cross-env NODE_ENV=production npm-run-all -l clean --sequential build:*",
    "build:sass": "sass --update styles/index.sass:_site/styles/index.css",
    "build:eleventy": "eleventy",
    "build:tailwind": "postcss styles/_tailwind.css -o _site/styles/tailwind.css",
    "lint": "prettier -w ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drain-zine/portfolio.git"
  },
  "author": "Tom Stannett",
  "homepage": "https://github.com/drain-zine/portfolio#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "autoprefixer": "^10.2.4",
    "cross-env": "^7.0.3",
    "husky": "^4.3.8",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^7.0.2",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^2.7.1",
    "sass": "^1.32.6",
    "sass-convert": "^0.5.2",
    "tailwindcss": "^2.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
